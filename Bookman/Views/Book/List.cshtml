@model BookListViewModel
@{
    ViewBag.Title = "View Our Inventory";
}

<h1 class="text-center mb-5">@ViewBag.Title</h1>

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3 ml-2 text-center">Genres</h3>
        <div class="list-group">
            @foreach (Genre g in Model.Genres)
            {
                <a asp-action="List"
                   asp-route-id="@g.Name"
                   class="list-group-item text-center @Model.CheckActiveGenre(g.Name)">
                    @g.Name
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <table class="table table-striped table-hover table-bordered table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Condition</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Book b in Model.Books)
                {
                    <tr>
                        <td><img src="~/images/@b.ImageString" alt="@b.Title" class="list-image"/></td>
                        <td>@b.Title</td>
                        <td>@b.AuthorFullName</td>
                        <td>@b.Condition.Status</td>
                        <td>
                            <a asp-controller="Book" asp-action="Details"
                               asp-route-id="@b.BookID"
                               class="btn btn-primary">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

