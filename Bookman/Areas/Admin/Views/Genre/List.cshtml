@model List<Genre>
@{ 
    ViewBag.Title = "Manage Genres";
}

<h1 class="ml-5 mb-5 text-center">Manage Genres</h1>
<div class="row">
    <div class="center">
        <div class="col-sm-10 ml-5">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Genre g in Model)
                    {
                        <tr>
                            <td>@g.Name</td>
                            <td>
                                <a asp-action="Update" asp-controller="Genre"
                                   asp-route-id="@g.GenreID" class="btn btn-primary">
                                    Update
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="buttonHolder">
                <a asp-action="Add" asp-controller="Genre" class="btn btn-success">Add Genre</a>
            </div>
            
        </div>
    </div>
   
    
</div>
